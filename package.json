{
    "name": "maitri-connect",
    "version": "1.1.0",
    "description": "Event Publishing Platform",
    "main": "server.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "install-all": "npm install && cd client && npm install",
        "client-build": "cd client && npm install && npm run build",
        "move-build": "rm -rf public && mkdir -p public && cp -r client/dist/. public/",
        "build": "npm run client-build && npm run move-build",
        "start": "node server.js",
        "dev-server": "nodemon server.js",
        "dev-client": "cd client && npm run dev",
        "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\""
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^7.0.12",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.1.0"
    }
}